<Window x:Class="MailSender.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="ОШИБКА!" Height="450" Width="800">
    <Grid>
        <TextBlock Name="TextError" Foreground="Red" TextWrapping="Wrap">
        </TextBlock>
        <Button Name="btnOK" Content="OK" Width="40" Height="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnErrorOkClick" Margin="0,0,0,20">
        </Button>
    </Grid>
</Window>
